<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_exp_title"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_gravity="bottom"
        android:layout_weight="4" >

        <View
            android:id="@+id/v_role"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/roleplay"
            android:visibility="invisible" />

        <View
            android:id="@+id/v_board"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/boardgame"
            android:visibility="invisible" />

        <View
            android:id="@+id/v_live"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/live"
            android:visibility="invisible" />

        <View
            android:id="@+id/v_other"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/other"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_exp_count"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="5"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>